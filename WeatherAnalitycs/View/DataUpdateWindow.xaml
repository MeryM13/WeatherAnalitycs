<Window x:Class="WeatherAnalytics.View.DataUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherAnalytics.View"
        mc:Ignorable="d"
        Title="DataDisplayWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Обновление данных" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" IsEnabled="False" FontSize="36" FontFamily="Bahnschrift SemiBold" Foreground="Black"/>
        <RadioButton Content="Все" HorizontalAlignment="Left" Margin="55,82,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Bahnschrift SemiLight" Foreground="Black" VerticalContentAlignment="Center"/>
        <RadioButton Content="Выбрать станции:" HorizontalAlignment="Left" Margin="55,137,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Bahnschrift SemiLight" Foreground="Black" VerticalContentAlignment="Center" IsChecked="True"/>
        <Button Content="Обновить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" FontSize="22" FontFamily="Bahnschrift SemiLight" Foreground="Black" Background="White"/>
        <Rectangle HorizontalAlignment="Left" Height="2" Margin="55,112,0,0" Stroke="Black" VerticalAlignment="Top" Width="700"/>
        <ScrollViewer Margin="55,167,45,68" Height="200" Width="700" CanContentScroll="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" BorderBrush="Black" BorderThickness="2,2,2,2" Background="White">
            <Grid>
                <CheckBox Content="Братск (30309)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center" IsChecked="True"/>
                <CheckBox Content="Саянск (30509)" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center"/>
                <CheckBox Content="Зима (30603)" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center"/>
                <CheckBox Content="Черемхово (30617)" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center" IsChecked="True"/>
                <CheckBox Content="Иркутск (30710)" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center" IsChecked="True"/>
                <CheckBox Content="Шелехов (30711)" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center"/>
                <CheckBox Content="Ангарск (30715)" HorizontalAlignment="Left" Margin="220,5,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center"/>
                <CheckBox Content="Хомутово (30716)" HorizontalAlignment="Left" Margin="220,33,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center" IsChecked="True"/>
                <CheckBox Content="Чита (30758)" HorizontalAlignment="Left" Margin="220,61,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center"/>
                <CheckBox Content="Байкальск (30818)" HorizontalAlignment="Left" Margin="220,89,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiLight" VerticalContentAlignment="Center" IsChecked="True"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
