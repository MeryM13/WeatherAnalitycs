<Window x:Class="WeatherAnalytics.View.DisplayTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WeatherAnalitycs.ViewModel"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="800">

    <Grid>
        <TextBlock x:Name="WindowTitle" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold" FontSize="30" TextAlignment="Center" Height="110"><Run Language="ru-ru" Text="{Binding WindowTitle}"/></TextBlock>
        <DataGrid x:Name="Grid" Margin="0,125,0,0" ItemsSource="{Binding Table}"/>
    </Grid>
</Window>
