<Window x:Class="WeatherAnalytics.View.DisplayChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WeatherAnalitycs.ViewModel"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="800">

    <Grid>
        <TextBlock x:Name="WindowTitle" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold" FontSize="30" TextAlignment="Center" Height="110"><Run Language="ru-ru" Text="{Binding WindowTitle}"></Run></TextBlock>
        <lvc:CartesianChart 
                Series="{Binding Series}" XAxes="{Binding XAxes}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ZoomMode="Both" Margin="0,125,0,0"/>

    </Grid>
</Window>
